#!/bin/sh

# Skip tests if SKIP_TESTS environment variable is set
if [ "$SKIP_TESTS" = "true" ]; then
  echo "âš ï¸  Skipping tests due to SKIP_TESTS=true"
  exit 0
fi

echo "ğŸ” Running pre-push checks..."

# Check linting
echo "ğŸ“ Running ESLint..."
npm run lint
if [ $? -ne 0 ]; then
  echo "âŒ Linting failed. Please fix linting errors before pushing."
  exit 1
fi

# Run a build check to ensure TypeScript compiles
echo "ğŸ”¨ Checking TypeScript Types..."
npm run type-check
if [ $? -ne 0 ]; then
  echo "âŒ TypeScript type check failed. Please fix type errors before pushing."
  exit 1
fi

# Run a build check to ensure TypeScript compiles
echo "ğŸ”¨ Checking TypeScript compilation..."
npm run bundle
if [ $? -ne 0 ]; then
  echo "âŒ TypeScript compilation failed. Please fix compilation errors before pushing."
  exit 1
fi

# Run the full test suite before pushing
echo "ğŸ§ª Running full test suite before push..."
npm run test
if [ $? -ne 0 ]; then
  echo "âŒ Tests failed. Please fix failing tests before pushing."
  exit 1
fi

echo "âœ… All pre-push checks passed!"
echo "ğŸ“ Current directory: $(pwd)"
echo "ğŸ“ Node version: $(node --version)"
echo "ğŸ“ NPM version: $(npm --version)"
